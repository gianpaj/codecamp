---
import { getLangFromUrl, getLocalePaths, getOGLocale, getOtherOGLocales, useTranslations } from "@i18n/utils";
import { SITE } from "@config";

const lang = getLangFromUrl(Astro.url);
const ogLocale = getOGLocale(lang);
const t = useTranslations(lang);

export interface Props {
  headProps?: HeadProps;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
  seoTitle,
  description: seoDescription,
  author = SITE.author,
  ogImage = SITE.ogImage,
  type = "website",
  publishDate,
} = Astro.props.headProps || {};

const title = `${seoTitle || SITE.seoTitle} - ${t("site.description")}`;
const description = seoDescription || t("site.description");

const socialImageURL = new URL(
  // ogImage can be an empty string
  // ogImage ? ogImage : SITE.ogImage,
  ogImage,
  Astro.url.origin,
).href;
// const fallbackImageURL = new URL(ogImage, Astro.url.origin).href;

---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" href="/favicon.ico" />
<link rel="icon" type="image/png" href="/favicon-16x16.png" />
<link rel="icon" type="image/png" href="/favicon-32x32.png" />
<meta name="generator" content={Astro.generator} />

<meta name="author" content={author} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />
<meta property="og:locale" content={ogLocale} />
{getOtherOGLocales(lang).map(fourLetterLocale => <meta property="og:locale:alternate" content={fourLetterLocale} />)}

{
  type === "article" && publishDate && (
    <meta
      property="article:published_time"
      content={new Date(publishDate).toISOString()}
    />
  )
}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImageURL}/>

{
  getLocalePaths(Astro.url).map((path) => (
    <link
      rel="alternate"
      hreflang={getOGLocale(path.lang, '-')}
      href={Astro.site?.origin + path.path}
    />
  ))
}

<!-- Google Font -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,400;0,500;0,600;0,700;1,400;1,600&display=swap"
/>
<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@200;300;400&family=Outfit:wght@600&display=swap" rel="stylesheet">
<link rel="sitemap" href="/sitemap-index.xml" />
