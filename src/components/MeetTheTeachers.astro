---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

import { getLangFromUrl, useTranslations } from '@i18n/utils';

import Gianfranco from '@images/gianfranco.jpg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="mx-auto mb-8 text-center lg:mb-12">
  <h2 class="mb-8 text-center text-2xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-3xl">
    {t('teacher1.title')}
  </h2>
  <div class="mt-4 grid gap-4 sm:grid-cols-[1fr_15rem]">
    <div>
      <p class="text-left font-sans text-lg leading-7" set:html={t('teacher1.description')} />
    </div>
    <div class="flex flex-col items-center gap-4">
      <Image
        src={Gianfranco}
        alt="Gianfranco"
        class="w-[9rem] rounded-full"
        loading="eager"
        format="avif"
        width={250}
      />
      <p class="mx-auto flex items-end justify-center gap-2 text-center font-semibold text-gray-900 dark:text-white">
        <span class="mt-1 leading-none">{t('teacher1.name')}</span>
        <a href="https://linkedin.com/in/gianpaj" target="_blank">
          <Icon title="Linkedin profile" name="mdi:linkedin" class="h-4 w-4" />
        </a>
        <a href="https://github.com/gianpaj" target="_blank">
          <Icon title="GitHub profile" name="bxl:github" class="h-4 w-4" />
        </a>
        <a href="https://gian.cool" target="_blank">
          <Icon title="Personal website" name="mdi:world-wide-web" class="h-4 w-4" />
        </a>
      </p>
      <Icon name="logos:mongodb" class="rounded-lg px-1 text-2xl dark:bg-gray-300/75" />
    </div>
  </div>
</div>
