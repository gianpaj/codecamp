---
import { Schema } from 'astro-seo-schema';

import { getLangFromUrl, useTranslations } from '@i18n/utils';
import { removeEmoji } from '@utils/strings';
import { FAQAccordion } from '@components/FAQAccordion';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="w-full font-sans sm:w-[48rem]">
  <FAQAccordion
    client:only="react"
    faqs={[
      {
        title: t('faq.q1.title'),
        answer: t('faq.q1.answer'),
      },
      {
        title: t('faq.q2.title'),
        answer: t('faq.q2.answer'),
      },
      {
        title: t('faq.q3.title'),
        answer: t('faq.q3.answer'),
      },
      {
        title: t('faq.q4.title'),
        answer: t('faq.q4.answer'),
      },
      {
        title: t('faq.q5.title'),
        answer: t('faq.q5.answer'),
      },
    ]}
  />
</div>

<Schema
  item={{
    '@context': 'https://schema.org',
    '@type': 'FAQPage',
    mainEntity: [
      {
        '@type': 'Question',
        name: removeEmoji(t('faq.q1.title')),
        acceptedAnswer: {
          '@type': 'Answer',
          text: removeEmoji(t('faq.q1.answer')),
        },
      },
      {
        '@type': 'Question',
        name: removeEmoji(t('faq.q2.title')),
        acceptedAnswer: {
          '@type': 'Answer',
          text: removeEmoji(t('faq.q2.answer')),
        },
      },
      {
        '@type': 'Question',
        name: removeEmoji(t('faq.q3.title')),
        acceptedAnswer: {
          '@type': 'Answer',
          text: removeEmoji(t('faq.q3.answer')),
        },
      },
      {
        '@type': 'Question',
        name: removeEmoji(t('faq.q4.title')),
        acceptedAnswer: {
          '@type': 'Answer',
          text: removeEmoji(t('faq.q4.answer')),
        },
      },
      {
        '@type': 'Question',
        name: removeEmoji(t('faq.q5.title')),
        acceptedAnswer: {
          '@type': 'Answer',
          text: removeEmoji(t('faq.q5.answer')),
        },
      },
    ],
  }}
/>

<style scoped>
  .question {
    @apply mb-6 text-2xl font-extrabold tracking-tight text-gray-900 dark:text-white;
  }
  .answer {
    @apply mb-6 text-left font-sans text-lg leading-7;
  }
</style>
